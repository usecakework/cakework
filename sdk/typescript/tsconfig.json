{
    "compilerOptions": {
        "strict": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "types",
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "@fern-api/covalent": [
                "."
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": []
}